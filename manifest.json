{
    "manifest_version": 3,
    "name": "Task Manager",
    "version": "1.6",
    "description": "A simple task manager for your daily activities.",
    "permissions": ["storage"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/img/icon16.png",
        "48": "/img/icon48.png",
        "128": "/img/icon128.png"
      }
    }
  }
  